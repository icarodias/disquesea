<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    
    
    <changeSet id="0" author="icaro.dias">
        <createTable tableName="tb_wallet">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="value" type="decimal(38,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <modifySql  dbms="mysql">
            <append  value="engine innodb"/>
        </modifySql>
    </changeSet>

    <changeSet id="1" author="icaro.dias">
        <createTable tableName="tb_products">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal(38,2)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="decimal(38,2)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="is_visible_in_catalog" type="bit">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="ENUM('BIRD','FISH','MEAT','OTHER','SEAFOOD','SHRIMP','SNACK')">
            </column>
            <column name="status" type="ENUM('ABSENT','AVAILABLE','CRITICAL')">
            </column>
            <column name="scale" type="ENUM('KILOGRAM','UNIT')">
            </column>
        </createTable>

        <modifySql  dbms="mysql">
            <append  value="engine innodb"/>
        </modifySql>
    </changeSet>

    <changeSet id="2" author="icaro.dias">
        <createTable tableName="tb_orders">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="amount" type="decimal(38,2)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="decimal(38,2)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="createdAt" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="is_sell" type="bit">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(60)">
            </column>
            <column name="product_id" type="bigint">
                <constraints foreignKeyName="fk_order_product" references="tb_products (id)"/>
            </column>
        </createTable>

        <modifySql  dbms="mysql">
            <append  value="engine innodb"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>